<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MainViewController">
    <children>
        <!-- Header -->
        <HBox alignment="CENTER" style="-fx-background-color: #2e3b4e; -fx-padding: 10px;">
            <Label text="Person List" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />
        </HBox>
        
        <!-- Main Content -->
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
            <TilePane fx:id="pTilePane" hgap="10" vgap="10" alignment="TOP_LEFT" style="-fx-padding: 20px;">
                <!-- Person tiles will be added here dynamically -->
            </TilePane>
        </ScrollPane>
        
        <!-- Footer -->
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #2e3b4e; -fx-padding: 10px;">
            <Button text="Add Person" onAction="#switchToPersonAddForm" style="-fx-font-size: 14px;" />
        </HBox>
    </children>
</VBox>
